        </activity>
		<activity android:name=".ONScripter"                  
	        android:screenOrientation="landscape"
	        android:configChanges="orientation|keyboardHidden"
	        android:launchMode="singleInstance">            
        </activity>
		<activity android:name=".VideoPlayer"                  
	        android:screenOrientation="landscape"
	        android:configChanges="orientation|keyboardHidden"
	        android:launchMode="singleInstance">            
        </activity>
